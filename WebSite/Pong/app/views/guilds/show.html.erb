<div id="content-guild">
	<div id="line">
		<div id="element">
			<div class="element-line">
				<h1 id="guild_name"><%= @guild.name %></h1>
			</div>
			<div class="element-line">
				<p><%= @guild.description %></p>
			</div>
		</div>
		<div id="element">
			<div class="element-line">
				<h1><%= @guild.nbmember %> / <%= @guild.maxmember %></h1>
			</div>
			<div class="element-line">
				<% if @my_guild == 1%>
					<button class="red_button" id="quit_guild" onClick="document.getElementById('id').value = <%= current_user.id %>">Leave guild</button>
				<% elsif @user_guild == -1 %>
					<button class="green_button" id="join_guild">join this guild</button>
				<% end %>
			</div>
			<div class="element-line">
				<button class="grey_button" onClick="window.location='/#guilds'">Other guilds</button>
				<input id="id" type="hidden" maxlenght="10" value="<%= @guild.id %>" >
			</div>
			<% if (@admin == 1 || @super_admin) %>
			<div class="element-line">
				<button class="red_button" id="change_admin">Change Admin</button>
			</div>
			<div class="element-line">
				<button class="green_button" id="declare_war">Declare War</button>
			</div>
			<div class="element-line">
				<%= form_for @guild do |f| %>
					<%= f.select :id_admin, options_for_select(@list_users.map{ |u| [u.nickname, u.id] }, :selected => @user.id) %>
				<% end %>
					<button class="grey_button" id="exec_change_admin">OK</button>
			</div>
			<% end %>
		</div>
	</div>
	<% if (@admin == 1 || @super_admin) %>
	<div id="line-war">
		<div id="big-element">
			<div class="element-line">
				<h1>Declare WAR</h1>
			</div>
			<div class="element-line">
				<span>search</span>
				<%= form_with(url: "/search", method: "get", remote: true) do %>
					<%= text_field :name, maxlength: 20, size: 24, placeholder: "Search a guild for the war..." %>
				<% end %>
				<span>or</span>
					<button class="grey_button" id="find_random">RANDOM GUILD</button>
			</div>
		</div>
	</div>
	<% end %>
	<div id="line">
		<div id="big-element">
			<div class="element-line">
				<h1>List users</h1>
			</div>
			<div class="element-line">
				<table>
					<thead>
						<tr>
							<td>ID</td>
							<td>User</td>
							<% if (@admin == 1 || @super_admin) %>
								<td>kickout</td>
							<% end %>
						</tr>
					</thead>
					<tbody>
						<% @i = 0%>
						<% @list_users.each do |user| %>
							<tr>
								<td><%= @i += 1 %></td>
								<td><%= user.nickname %></td>
								<% if (@admin == 1 || @super_admin) %>
									<td><button class="red_button" id="quit_guild" onClick="document.getElementById('id').value = <%= user.id %>">Kick Out</button></td>
								<% end %>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<div id="line">
		<div id="big-element">
			<div class="element-line">
				<h1>Last wars</h1>
			</div>
			<div class="element-line">
				<table>
					<thead>
						<tr>
							<td>ID</td>
							<td>target 1 / target 2</td>
						</tr>
					</thead>
					<tbody>
						<% @i = 0%>
						<% @wars_histories.each do |wars_history| %>
							<% @color1 = wars_history.score_target_1 > wars_history.score_target_2 ? "green" : "red"; %>
							<% @color2 = wars_history.score_target_1 < wars_history.score_target_2 ? "green" : "red"; %>
							<tr>
								<td><%= @i += 1 %></td>
								<td>
									<span><%= Guild.find_by_id(wars_history.target_1).name %></span>
									<span id="<%= @color1 %>"><%= wars_history.score_target_1 %></span>
									/
									<span id="<%= @color2 %>"><%= wars_history.score_target_2 %></span>
									<span><%= Guild.find_by_id(wars_history.target_2).name %></span>
								</td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>