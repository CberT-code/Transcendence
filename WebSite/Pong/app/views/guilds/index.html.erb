<div id="content-guilds">
	<div id="element">
		<div id="center">
			<div id="left">
				 <% if User.find(current_user.id).id_guild == -1 %>
					<button class="green_button" id="create_guild" onClick="window.location='/#new_guild'">Create your guild</button>
				<% end %>
			</div>
			<div id="right">
				<input type="text" maxlenght="30" placeholder="Search a guild...">
			</div>
		</div>
	</div>
	<div id="element">
		<div id="center">
			<table>
				<thead>
					<tr>
						<td>ID</td>
						<td>Name</td>
						<td>Members</td>
						<td></td>
					</tr>
				</thead>
				<tbody>
				<% @i = 0%>
					<% @guilds.each do |guild| %>
						<tr>
							<td><%= @i += 1 %></td>
							<td><%= guild.name %></td>
							<td><%= guild.nbmember %> / <%= guild.maxmember %></td>
							<td><button onClick="window.location='/#show_guild/<%= guild.id %>'">Voir</button></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>