<div id="content-ladder">
	<div id="center">
		<div id="title">
			<h1>ladder</h1>
		</div>
		<div id="wrapper">
			<% index = 1%>
			<% @players.each do |player| %>
					<div class="player" OnClick="window.location='/#show_user/<%= player.id %>'">
						<div id="left">
							<div id="icon">
								<img alt="<%= player.nickname %> image" src="<%= player.image %>" onerror="this.src='https://cdn.intra.42.fr/users/medium_default.png';">
							</div>
							<div id="rank">
								<p>#<%= index %></p>
							</div>
						</div>
						<div id="right">
							<div class="nickname">
								<p><%= player.nickname %> - Elo : <%= player.elo %>
							</div>
							<div class="stats">
								<p><span class="victory"><%= player.stat.victory %></span> - <span class="defeat"><%= player.stat.defeat %></span></p>
							</div>
						</div>
					</div>
				<% index += 1 %>
			<% end %>
		</div>
	</div>
	<%= stylesheet_link_tag "ladder.css" %>
</div>