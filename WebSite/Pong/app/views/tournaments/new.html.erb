<div id="content-new_tournament">
	<div id="center">
		<div id="title">
			<h1>Create tournament</h1>
		</div>
		<%= form_for @tournament, remote: true do |f| %>
			<div class="element">
				<div class="center">
					<%= f.text_field :name, maxlength: 20, size: 24, placeholder: "Enter tournament name"%>
				</div>
			</div>
			<div class="element">
				<div class="center">
					<%= f.text_area :description, cols: 50, rows: 5, maxlength: 250, placeholder: "Description...(250characters max)" %>
				</div>
			</div>
			<div class="element">
				<div class="center">
					<div class="inline">
						<div class="left">
						 	<p>Points max </p>
						 </div>
						 <div class="right">
							<%= select_tag "maxpoints", options_for_select((1..15).step(1)) %>
						</div>
					</div>
				</div>
			</div>
			<div class="element">
				<div class="center">
					<div class="inline">
						<div class="left">
							<p>Speed</p>
						</div>
						<div class="right">
							<%= select_tag "speed", options_for_select((1..10).step(0.5)) %>
						</div>
					</div>
				</div>
			</div>
			<div class="element">
				<div class="center date">
					<label> Start <%= f.date_field :start, min: Date.today, value: Date.today %> </label>
					<label> end <%= f.date_field :end, min: Date.today + 2.days, value: Date.today + 7.days  %> </label>
				</div>
			</div>
		<% end %>
			<div class="element">
				<div class="center">
					<button id="create_tournament">Create</button>
				</div>
			</div>
	</div>
</div>