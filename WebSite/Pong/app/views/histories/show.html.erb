<%= stylesheet_link_tag "pong_v1.css" %>
<%= content_tag :div, '', id: 'user_data', data: { source: @game } %>
<div id="wrapper">
    <div class='profile_pic' id='left_PP' style='background-image: url("<%= @game.host.image %>")'></div>
    <div id="game">
        <div class="goal"></div>
        <div id="user" class="player"></div>
        <div id="ball"></div>
        <div class="goal" style='left: calc(var(--game_width) - var(--player_width)'></div>
        <div id="opponent" class="player"></div>
    </div>
    <div class='profile_pic' id='right_PP' style='background-image: url("<%= @game.opponent.image %>")'></div>
</div>
<div>
    <center><h2 id="score">
    <% if @game.statut == 0 %>
        Waiting For Opponent
    <% end %>
    </h2></center>
</div>
<center><button id="pause">PAUSE</button></center>
<div>
    <p>TESTING : </p>
    <p>ID : <%= @game.id %></p>
    <p>STATUS : <%= @game.statut %></p>
    <p id='dev'></p>
</div>

<%= javascript_pack_tag 'pong_v1' %>